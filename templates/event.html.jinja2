{% extends "base.html.jinja2" %}

{% block title %}{{ display_name }}{% endblock title%}

{% block main %}
<main>

    <div class="flex">

        <div><img src="{{ image_path }}"></div>

        <div>
            <h2>
                <time datetime="{{ date.strftime('%Y-%m-%d') }}">{{ date.strftime('%d %b %Y') }}<time><br>
                {{ display_name }}<br>
                <a id="location" href="{{ location.href }}" target="_blank">@{{ location.display_name }} ({{ location.city }})</a>
            </h2>

            <ol class="lineup">
                {% for artist in lineup %}
                    <li>{{ artist }}</li>
                {% endfor %}
            </ol>
            {% if past == false and soldout == false%}
            <h2><a href="{{ tickets_href }}" target="_blank">Buy Tickets...</a></h2>
            {% elif past == false and soldout == true %}
            <h2><a href="{{ tickets_href }}" target="_blank">Sold out.</a></h2>
            {% endif %}

            <ul class="social">
                {% for link in links %}
                    <li><a href="{{ link.href }}" target="_blank">{{ link.display_name }}</a></li>
                {% endfor %}
            </ul>

        </div>
        
    </div>

    <article>
        {{ description|safe }}
    </article>

</main>
{% endblock main %}
